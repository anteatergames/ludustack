@{
    Layout = null;
}
    <div class="row gameidea big py-3">
        <div class="col-12 text-center mb-3">
            <button id="btnGenerateGameIdea" class="generatebutton text-uppercase">@SharedLocalizer["generate"]</button>
        </div>
        <div class="col-12 col-md-6 col-lg p-3 text-center rounded-0 bg-warning">
            <h2 class="text-uppercase">@SharedLocalizer["genre"]</h2>
            <div class="slot mb-2">
                <div class="align-middle game-idea-element game-idea-genre">A video game</div>
            </div>
            <span>@SharedLocalizer["The style of the game"]</span>
        </div>
        <div class="col-12 col-md-6 col-lg p-3 text-center rounded-0 bg-danger">
            <h2 class="text-uppercase">@SharedLocalizer["action"]</h2>
            <div class="slot mb-2">
                <div class="game-idea-element game-idea-action">perform actions on</div>
            </div>
            <span>@SharedLocalizer["What you must do"]</span>
        </div>
        <div class="col-12 col-md-6 col-lg p-3 text-center rounded-0 bg-info">
            <h2 class="text-uppercase">@SharedLocalizer["thing"]</h2>
            <div class="slot mb-2">
                <div class="game-idea-element game-idea-things">things</div>
            </div>
            <span>@SharedLocalizer["Element of the game"]</span>
        </div>
        <div class="col-12 col-md-6 col-lg p-3 text-center rounded-0 bg-success">
            <h2 class="text-uppercase">@SharedLocalizer["goal"]</h2>
            <div class="slot mb-2">
                <div class="game-idea-element game-idea-goals">to achieve goals</div>
            </div>
            <span>@SharedLocalizer["What you have to achieve"]</span>
        </div>
        <div class="col-12 col-lg p-3 text-center rounded-0 bg-secondary">
            <h2 class="text-uppercase">@SharedLocalizer["rule"]</h2>
            <div class="slot mb-2">
                <div class="game-idea-element game-idea-rules">respecting this</div>
            </div>
            <span>@SharedLocalizer["Obstacle to overcome"]</span>
        </div>
    </div>

<div class="row">
    <div class="col-12 text-center">
        <div class="col-12">
            <span class="display-4">@SharedLocalizer["Can you make this game?"]</span>
        </div>
    </div>
</div>