@model KeyValuePair<int, int>
@{
    Layout = null;
}

@if (Model.Key <= Model.Value)
{
    @if (Model.Key == 1)
    {
        <img src="~/images/gamejam/winner-1.png" class="img-fluid" alt="@SharedLocalizer[" First place"]" />
    }
    else if (Model.Key == 2)
    {
        <img src="~/images/gamejam/winner-2.png" class="img-fluid" alt="@SharedLocalizer[" Second place"]" />
    }
    else if (Model.Key == 3)
    {
        <img src="~/images/gamejam/winner-3.png" class="img-fluid" alt="@SharedLocalizer[" Third place"]" />
    }
    else
    {
        <img src="~/images/gamejam/winner-other.png" class="img-fluid" alt="@SharedLocalizer[" One of the winners"]" />
    }
}