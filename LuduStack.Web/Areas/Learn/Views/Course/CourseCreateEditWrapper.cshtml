@model CourseViewModel
@{
    var isAjax = ViewContext.HttpContext.Request.IsAjaxRequest();
}

@section ComponentStyles {
    <link rel="stylesheet" href="~/css/rangeslider.css" />
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/select2/css/select2.min.css">
        <link rel="stylesheet" href="~/lib/cropperjs/cropper.css" />
        <link rel="stylesheet" href="~/css/study.css">
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/lib/cropperjs/cropper.min.css" />
        <link rel="stylesheet" href="~/css/study.min.css" asp-append-version="true">
    </environment>
}

@section Scripts {
    <script src="~/lib/rangeslider/rangeslider.min.js"></script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <environment include="Development">
        <script src="~/lib/cropperjs/cropper.js"></script>
        <script src="~/lib/select2/js/select2.full.min.js"></script>
        <script src="~/lib/sortable/Sortable.js"></script>
        <script src="~/js/common-edit.js"></script>
        <script src="~/js/study/coursecommon.js"></script>
        <script src="~/js/study/courseedit.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/lib/sortable/Sortable.min.js"></script>
        <script src="~/lib/cropperjs/cropper.min.js"></script>
        <script src="~/js/study/courseedit.min.js" asp-append-version="true"></script>
    </environment>
}

<input type="hidden" id="urls" value="urls"
       data-url-listplansforedit="@Url.Action("listplansforedit", "course", new { area = "learn", courseId = Model.Id })"
       data-url-plans-save="@Url.Action("saveplans", "course", new { area = "learn", courseId = Model.Id })" />

<section class="content container">
    <partial name="_CourseCreateEdit" model="Model" />
</section>