@model List<ExternalLinkBaseViewModel>
@{
    Layout = null;
}
@if (Model.Any())
{
    <div class="game-external-links-stores text-center">
        @foreach (var item in Model.Where(x => x.IsStore))
        {
            <div class="mt-2">
                <a href="@item.Value" target="_blank">
                    <img src="@string.Format("/images/stores/{0}.png", item.Provider.ToString())" alt="@item.Provider" class="img-fluid" />
                </a>
            </div>
        }
    </div>
}