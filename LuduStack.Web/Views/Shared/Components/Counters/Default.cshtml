@model CountersViewModel
@{
    Layout = null;

    var isPlaceholder = (bool)(ViewData["placeholder"] ?? false);
}

<div class="row text-uppercase">
    <div class="col-xl-12 col-md-6 col-12">
        <a asp-area="" asp-controller="user" asp-action="list">
            <div class="info-box">
                <span class="info-box-icon bg-yellow@(isPlaceholder ? " skeleton" : string.Empty)"><i class="fa fa-user" aria-hidden="true"></i></span>

                <div class="info-box-content">
                    <span class="info-box-number@(isPlaceholder ? " skeleton" : string.Empty)">
                        @if (isPlaceholder)
                        {
                            <text>&nbsp;</text>
                        }
                        else
                        {
                            <text>@Model.UsersCount</text>
                        }
                    </span>
                    <span class="info-box-text@(isPlaceholder ? " skeleton" : string.Empty)">
                        @if (isPlaceholder)
                        {
                            <text>&nbsp;</text>
                        }
                        else
                        {
                            <text>@SharedLocalizer["Users"]</text>
                        }
                    </span>
                </div>
            </div>
        </a>
    </div>
    <div class="col-xl-12 col-md-6 col-12">
        <a asp-area="" asp-controller="game" asp-action="list">
            <div class="info-box">
                <span class="info-box-icon bg-green@(isPlaceholder ? " skeleton" : string.Empty)"><i class="fas fa-gamepad" aria-hidden="true"></i></span>

                <div class="info-box-content">
                    <span class="info-box-number@(isPlaceholder ? " skeleton" : string.Empty)">
                        @if (isPlaceholder)
                        {
                            <text>&nbsp;</text>
                        }
                        else
                        {
                            <text>@Model.GamesCount</text>
                        }
                    </span>
                    <span class="info-box-text@(isPlaceholder ? " skeleton" : string.Empty)">
                        @if (isPlaceholder)
                        {
                            <text>&nbsp;</text>
                        }
                        else
                        {
                            <text>@SharedLocalizer["Games"]</text>
                        }
                    </span>
                </div>
            </div>
        </a>
    </div>
    <div class="clearfix visible-sm-block"></div>

    <div class="col-xl-12 col-md-6 col-12">
        <a asp-area="" asp-controller="home" asp-action="articles">
            <div class="info-box">
                <span class="info-box-icon bg-blue@(isPlaceholder ? " skeleton" : string.Empty)"><i class="fas fa-newspaper" aria-hidden="true"></i></span>

                <div class="info-box-content">
                    <span class="info-box-number@(isPlaceholder ? " skeleton" : string.Empty)">
                        @if (isPlaceholder)
                        {
                            <text>&nbsp;</text>
                        }
                        else
                        {
                            <text>@Model.ArticlesCount</text>
                        }
                    </span>
                    <span class="info-box-text@(isPlaceholder ? " skeleton" : string.Empty)">
                        @if (isPlaceholder)
                        {
                            <text>&nbsp;</text>
                        }
                        else
                        {
                            <text>@SharedLocalizer["Articles"]</text>
                        }
                    </span>
                </div>
            </div>
        </a>
    </div>
    <div class="col-xl-12 col-md-6 col-12">
        <a asp-area="" asp-controller="team" asp-action="index">
            <div class="info-box">
                <span class="info-box-icon bg-red@(isPlaceholder ? " skeleton" : string.Empty)"><i class="fa fa-users" aria-hidden="true"></i></span>

                <div class="info-box-content">
                    <span class="info-box-number@(isPlaceholder ? " skeleton" : string.Empty)">
                        @if (isPlaceholder)
                        {
                            <text>&nbsp;</text>
                        }
                        else
                        {
                            <text>@Model.TeamCount</text>
                        }
                    </span>
                    <span class="info-box-text@(isPlaceholder ? " skeleton" : string.Empty)">
                        @if (isPlaceholder)
                        {
                            <text>&nbsp;</text>
                        }
                        else
                        {
                            <text>@SharedLocalizer["Teams"]</text>
                        }
                    </span>
                </div>
            </div>
        </a>
    </div>
</div>