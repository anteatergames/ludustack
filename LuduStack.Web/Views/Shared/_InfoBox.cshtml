@{
    Layout = null;
    var version = ViewData["BuildNumber"]?.ToString();

    version = version.StartsWith("v") ? version : String.Format("v{0}", version);
}

<div id="infobox" class="col-12 px-1">
    <div class="box p-3 bg-white">
        <div class="row">
            <div class="col-6 text-capitalize text-nowrap">
                <span class="h5">@SharedLocalizer["platform"]</span>
                <ul class="list-unstyled">
                    <li><a asp-area="" asp-controller="help" asp-action="about">@SharedLocalizer["about"]</a></li>
                    <li><a asp-area="" asp-controller="home" asp-action="timeline">@SharedLocalizer["timeline"]</a></li>
                    <li><a asp-area="" asp-controller="help" asp-action="contributing">@SharedLocalizer["contribute"]</a></li>
                    <li><a asp-area="" asp-controller="help" asp-action="press">@SharedLocalizer["press"]</a></li>
                    <li><a asp-area="" asp-controller="help" asp-action="partners">@SharedLocalizer["partners"]</a></li>
                    <li><a asp-area="" asp-controller="help" asp-action="advertising">@SharedLocalizer["advertise"]</a></li>
                    <li><a asp-area="" asp-controller="help" asp-action="specialthanks">@SharedLocalizer["special thanks"]</a></li>
                </ul>
            </div>
            <div class="col-6 text-capitalize border-left rounded-0">
                <span class="h5">@SharedLocalizer["interacting"]</span>
                <ul class="list-unstyled">
                    <li><a asp-area="" asp-controller="help" asp-action="start">@SharedLocalizer["help"]</a></li>
                    <li><a asp-area="gamification" asp-controller="userbadge" asp-action="help">@SharedLocalizer["badges"]</a></li>
                    <li><a asp-area="gamification" asp-controller="ranking" asp-action="help">@SharedLocalizer["ranks"]</a></li>
                </ul>
            </div>
        </div>
        <div class="row p-2 border-top rounded-0">
            <div class="col-12">
                <div class="user-social-acount text-center">
                    <a href="https://www.facebook.com/ludustack" target="_blank" class="mt-1 btn rounded-circle btn-social-icon btn-facebook" rel="noopener noreferrer" aria-label="Facebook Page">
                        <i class="fab fa-facebook-f" aria-hidden="true"></i>
                    </a>
                    @*<a href="https://www.twitter.com/programad" target="_blank" class="mt-1 btn rounded-circle btn-social-icon btn-twitter" rel="noopener noreferrer">
                            <i class="fab fa-twitter" aria-hidden="true"></i>
                        </a>*@
                    <a href="https://discord.gg/X5Z8dTH" target="_blank" class="mt-1 btn rounded-circle btn-social-icon btn-discord" rel="noopener noreferrer" aria-label="Discord Server">
                        <i class="fab fa-discord" aria-hidden="true"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="row pt-2 border-top rounded-0">
            <div class="col-12 text-capitalize">
                <a asp-area="" asp-controller="home" asp-action="terms">@SharedLocalizer["terms"]</a> | <a asp-area="" asp-controller="home" asp-action="privacy">@SharedLocalizer["policies"]</a>
            </div>
            <div class="col-12 pt-2">
                Copyright &copy; 2021 <a href="https://www.ludustack.com/" rel="noopener noreferrer">ludustack</a>.
            </div>
        </div>

        @if (!string.IsNullOrWhiteSpace(version))
        {
            <div class="col-12 text-center">
                <a href="#"><small>@version</small></a>
            </div>
        }
    </div>
</div>