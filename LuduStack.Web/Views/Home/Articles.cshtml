@{
    ViewData["Title"] = SharedLocalizer["User Articles"];
    ViewData["Description"] = SharedLocalizer["Read good quality articles to improve your knowledge on the gamedev industry."];
    ViewData["CanonicalUrl"] = "https://www.ludustack.com/home/articles/";

    var whatIsAnArticle = new HomeSquareViewModel("help", "articles", "bg-purple", "far fa-3x fa-newspaper", "What is an article?");
}

@section Styles {
    <environment include="Development">
        <link rel="stylesheet" href="~/css/articles.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/articles.min.css" asp-append-version="true" />
    </environment>
}

@section Scripts {
    <environment include="Development">
        <script src="~/js/shared/contentactions.js"></script>
        <script src="~/js/shared/activityfeed.js"></script>
        <script src="~/js/home/articles.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/home/articles.min.js" asp-append-version="true"></script>
    </environment>
}

<section class="content container">
    <h1 class="sr-only">LUDUSTACK - @ViewData["Title"]</h1>

    <div class="row">
        <div class="col-lg-2 d-none d-lg-block">
            <div class="row">
                <div class="col-12">
                    <partial name="_HomeSquare" model="whatIsAnArticle" />
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-10 col-xl-10 pl-md-2">
            <div class="row">
                <div class="col-12">
                    <div id="divActivityFeed"></div>
                </div>
            </div>
        </div>

        <div class="col-12 d-lg-none">
            <div class="row">
                <div class="col-12">
                    <partial name="_HomeSquare" model="whatIsAnArticle" />
                </div>
            </div>
        </div>
    </div>
</section>