@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = ViewData["Title"] ?? SharedLocalizer["help"].Value.ToUpper();
    ViewData["Description"] = String.Format("{0} - {1}", title, SharedLocalizer["Get help on how LUDUSTACK works. Learn how to interact with other users and how to use the platform."]);

    var showAds = (bool)(ViewData["ShowAds"] ?? false);
}

@section Styles {
    <style>
        .help a {
            font-weight: bold;
        }
    </style>
}

<section class="content container">
    <div class="col-12">
        <div class="row">
            <div class="col-12 col-md-9 p-4 box bg-white help">
                <h1>@title</h1>

                @if (showAds)
                {
                    <div class="rounded-0 p-0 px-lg-5 my-3 mx-auto">
                        <partial name="_GoogleAdFeed" />
                    </div>
                }

                @RenderBody()
            </div>
            <div class="col-12 col-md-3">
                <partial name="_Navigation" />

                @RenderSection("SubPageContent", required: false)
            </div>
        </div>
    </div>
</section>